# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Server Configuration
SERVER_IP=your_hetzner_server_ip
SERVER_USER=root

# Database
DATABASE_URL=sqlite:///emergency_call.db

# Environment
NODE_ENV=production
ENVIRONMENT=production

# Security (generate strong random values)
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# File Upload Limits
MAX_FILE_SIZE=50MB
ALLOWED_AUDIO_FORMATS=mp3,wav,m4a,ogg,flac

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/sosai/app.log

# Rate Limiting
API_RATE_LIMIT=10
API_BURST_LIMIT=20
